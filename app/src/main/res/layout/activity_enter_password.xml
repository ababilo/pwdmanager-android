<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EnterPasswordActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/EnterPasswordActivity__password_input"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/EnterPasswordActivity__settings"
            android:id="@+id/EnterPasswordActivity__settings_button"
            android:layout_weight="0.5"
            android:onClick="onSettingsClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/EnterPasswordActivity__ok"
            android:id="@+id/EnterPasswordActivity__ok_button"
            android:layout_weight="0.5"
            android:onClick="onOkClick"/>

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/EnterPasswordActivity__exit"
        android:id="@+id/EnterPasswordActivity__exit_button"
        android:onClick="onExitClick"/>

</LinearLayout>